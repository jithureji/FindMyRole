@model Jobsearch.Models.CompInsertCls
@{
    ViewBag.Title = "CompInsert_Pageload";
}

<h1>Company Registration</h1>
<div>
    @using (Html.BeginForm("CompInsert_Click", "CompReg", FormMethod.Post))
    {
        <div>
            <label>Company Name</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.cname)
            @Html.ValidationMessageFor(m => m.cname)
        </div>
        <div>
            <label>Company Address</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.caddress)
            @Html.ValidationMessageFor(m => m.caddress)
        </div>
        <div>
            <label>Phone</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.cphone)
            @Html.ValidationMessageFor(m => m.cphone)
        </div>
        <div>
            <label>Website</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.cweb)
            @Html.ValidationMessageFor(m => m.cweb)
        </div>
        <div>
            <label>User Name</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.cusername)
        </div>
        <div>
            <label>Password:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.cpass)
        </div>
        <div>
            <label>confirm Password:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.cfpass)
            @Html.ValidationMessageFor(m => m.cpass)
        </div>
        <div>
            <input type="submit" value="Insert" />
            @Html.DisplayFor(m => m.cmsg)
        </div>
    }
</div>


